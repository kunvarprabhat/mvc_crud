@model IEnumerable<Category>
@{
    ViewData["Title"] = "Index";
}

if (TempData["success"] != null)
{
    <h2>@TempData["success"]</h2>
}
<div class="container p-3">
    <div class="row pt-4">
        <div class="col-6">
            <h2 class="text-primary">Category List</h2>
        </div>

            <div class="col-6">
            <a asp-controller="Category" asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> &nbsp;Create New Category
             </a>
            </div>
        

    </div>
</div>

<br /> 
<table class="table table-bordered table-striped" style="width:100%">
    <thead>
        <th>Category Name</th>
        <th>Display Order</th>
    </thead>
    <tbody>
        @foreach (var obj in Model)
        {
           <tr>
                <td width="50%">
                    @obj.Name
                </td>
                <td width="50%">
                    @obj.DisplayOrder
                </td>
                <td>
                    <div class="w-75 btn-group" role="group">
                        <a asp-action="Edit" asp-controller="Category" asp-route-id="@obj.Id"
                           class="btn btn-primary mx-1"> <i class="bi bi-pencil-square"></i>Edit</a>
                        <a asp-action="Delete" asp-controller="Category" asp-route-id="@obj.Id"
                        class="btn btn-danger mx-1"> <i class="bi bi-trash-fill"></i>Delete</a>
                    </div>

                </td>
                
           </tr> 
        } 
    </tbody>
</table>
